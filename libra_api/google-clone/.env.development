# Development-specific environment variables
# This file overrides .env for development mode

# Enable source maps for debugging in development
GENERATE_SOURCEMAP=true

# Development Server Settings
PORT=3003
BROWSER=none
SKIP_PREFLIGHT_CHECK=true

# Development optimizations
FAST_REFRESH=true
ESLINT_NO_DEV_ERRORS=true
TSC_COMPILE_ON_ERROR=true

# Disable heavy optimizations in development
INLINE_RUNTIME_CHUNK=true
IMAGE_INLINE_SIZE_LIMIT=10000

# Development memory settings (lower than production)
# This is overridden in package.json start script
NODE_OPTIONS=--openssl-legacy-provider --max-old-space-size=2048
